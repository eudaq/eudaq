# xterm -sb -sl 1000 -geom 80x20-480-300 -T 'PALPIDEFS Producer' -e './PALPIDEFSProducer -r tcp://$TLUIP:$RCPORT -d 0 -n pALPIDEfs2' &


# ./PALPIDEFSProducer -r tcp://$TLUIP:$RCPORT -d 3 > out 2>&1

