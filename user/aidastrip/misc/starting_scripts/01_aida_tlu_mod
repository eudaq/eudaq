# IP-environment variables are set by user/eudet/misc/environments/setup_eudaq2_aida-tlu.sh 
# Define port
RPCPORT=44444

# Start Run Control
euRun -a tcp://${RPCPORT} &
sleep 2

# Start Logger
euLog -r tcp://${RUNCONTROLIP}:${RPCPORT} &
sleep 1

# Start TLU Producer
euCliProducer -n AidaTluProducer -t aida_tlu -r tcp://${TLUIP}:${RPCPORT} &
sleep 1

# Start one DataCollector
# name (-t) in conf file
# or: -n TriggerIDSyncDataCollecor
#xterm -T "Data Collector TLU" -e 'euCliCollector -n DirectSaveDataCollector -t tlu_dc -r tcp://${RUNCONTROLIP}:${RPCPORT}' &
euCliCollector -n DirectSaveDataCollector -t tlu_dc -r tcp://${RUNCONTROLIP}:${RPCPORT} &