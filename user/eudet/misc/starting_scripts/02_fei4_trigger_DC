# Start Run Control
xterm -T "Run Control" -e 'euRun' &
sleep 2

# Start Logger
xterm -T "Log Collector" -e 'euLog -r tcp://192.168.22.1' &
sleep 1

# Start one DataCollectors
# name (-t) in conf file
# or: -n Ex0TgDataCollector
xterm -T "Data Collector Trigger" -e 'euCliCollector -n Ex0TgDataCollector -t trigger_dc -r tcp://192.168.22.1:44000' &
sleep 1

# Start TLU Producer
xterm -T "AidaTluProducer" -e 'euCliProducer -n AidaTluProducer -t aida_tlu -r tcp://192.168.22.1:44000' & 
sleep 1

# Start STcontrol Producer
#xterm -T "STcontrol" -e 'sudo /opt/USBpix/bin/STcontrol_eudaq -r 192.168.22.1' &
xterm -T "STcontrol" -e 'sudo env LD_LIBRARY_PATH=$LD_LIBRARY_PATH /opt/STcontrol_5.3/bin/STcontrol_eudaq -r 192.168.22.1' &
sleep 1

# OnlineMonitor
xterm -T "Online Monitor" -e 'StdEventMonitor -t StdEventMonitor -r tcp://192.168.22.1' &
#xterm -T "Online Monitor" -e 'StdEventMonitor_1705 -r tcp://192.168.22.1' &
